.wrapper
  = render "shared/side_bar"
  .chat
    .header
      .left-header
        .left-header__title
          group-name
        %ul.left-header__members
          Memberï¼š
          %li.member
            aqua
          %li.member
            omk
      .right-header
        %a.right-header__button{href: "/groups/#{current_user.id}/edit"} Edit
    .messages.js-messages
      - @messages.each do |message|
        .message
          .upper-message
            .upper-message__user-name= current_user.name
            .upper-message__date= message.created_at
          .lower-message
            %p.lower-message__content= message.text
            .lower-message__image
              %img{alt: "image", src: "#{message.image.thumb.url}"}/
    .form
      = form_for [@group,@message] do |f|
        = f.text_field :text, class: "form__message", placeholder: "Type a message"
        .form__mask
          = f.label :image, class: "form__mask__image" do
            %i.fas.fa-image.icon
            = f.file_field :image, class: "hidden"
        = f.submit "Send", class: "form__submit"






