.message{ "data-messaeg-id": "#{message.id}"}
  .upper-message
    .upper-message__user-name
      = message.user.name
    .upper-message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M:%S")
  .lower-message
    %p.lower-message__content
      = message.text
  = image_tag message.image.thumb.url, class: "lower-message__image" if message.image.present?
