.notification
#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Create Account
      %h5 新規アカウントの作成
      = link_to "Log in", new_user_session_path, class: "btn"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name,class: "edit_user", id: "edit_user", url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :username
            %br/
          .field-input
            = f.text_field :name, autofocus: true, id: "user_name"
        .field
          .field-label
            = f.label :email
            %br/
          .field-input
            = f.email_field :email, autofocus: true, autocomplete: "email",id: "user_email"
        .field
          .field-label
            = f.label :password
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
          .field-input
            = f.password_field :password, autocomplete: "new-password", id: "user_passwaord"
        .field
          .field-label
            = f.label :password_confirmation
            %br/
          .field-input
            = f.password_field :password_confirmation, autocomplete: "new-password"
        .actions
          = f.submit "Sign up", value: "Create Account", class: "btn"
